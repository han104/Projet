{% extends '@App/base/BaseAdmin.html.twig' %}

{% block body %}

    <div class="row">
        {{ form_start(form) }}

        <div class="col-6 offset-2">
            {{ form_errors(form.LastName) }}
            {{ form_label(form.LastName) }}
            {{ form_widget(form.LastName, {'attr': {'class': 'nom'}}) }}
        </div>
        <hr>

        <div class="col-6 offset-2">
            {{ form_label(form.FirstName) }}
            {{ form_widget(form.FirstName, {'attr': {'class': 'firstName'}}) }}
        </div>
        <hr>

        <div class="col-6 offset-2">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'email'}}) }}
        </div>
        <hr>

        <div class="col-6 offset-2">
            {{ form_label(form.Password) }}
            {{ form_widget(form.Password, {'attr': {'class': 'Password'}}) }}
        </div>
        <hr>

        <div class="col-6 offset-2">
            {{ form_label(form.Telephone) }}
            {{ form_widget(form.Telephone, {'attr': {'class': 'Telephone'}}) }}
        </div>
